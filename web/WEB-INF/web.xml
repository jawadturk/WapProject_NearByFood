<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <welcome-file-list>
        <welcome-file>indexServlet</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AddRestaurant</servlet-name>
        <servlet-class>controllers.AddRestaurant</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddRestaurant</servlet-name>
        <url-pattern>/addRestaurant</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCuisine</servlet-name>
        <servlet-class>controllers.AddCuisine</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddCuisine</servlet-name>
        <url-pattern>/addCuisine</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetCitiesServlet</servlet-name>
        <servlet-class>controllers.GetCitiesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetCitiesServlet</servlet-name>
        <url-pattern>/getCities</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReviewDetailsServlet</servlet-name>
        <servlet-class>controllers.ReviewDetailsServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ReviewDetailsServlet</servlet-name>
        <url-pattern>/reviewServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>servlets.IndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/indexServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RestaurantsServlet</servlet-name>
        <servlet-class>servlets.RestaurantsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RestaurantsServlet</servlet-name>
        <url-pattern>/restaurants</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddReviewServlet</servlet-name>
        <servlet-class>controllers.AddReviewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddReviewServlet</servlet-name>
        <url-pattern>/addReview</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controllers.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserDetailsServlet</servlet-name>
        <servlet-class>controllers.UserDetailsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserDetailsServlet</servlet-name>
        <url-pattern>/userDetailsServlet</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticatonFilter</filter-name>
        <filter-class>Filters.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticatonFilter</filter-name>
        <servlet-name>LoginServlet</servlet-name>
    </filter-mapping>

</web-app>